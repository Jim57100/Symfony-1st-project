{% extends 'base.html.twig' %}

{% block title %}Hello PersonnageController!{% endblock %}

{% block monTitre %}Personnage {{ perso.nom }} {% endblock %}

{% block body %}
    
<div class="row">
  <div class="col-2">
    <img src="{{ asset('images/personnages/' ~ perso.nom ~ '.png')}}">
  </div>
  <div class="col">
    <h2>{{ perso.nom }}</h2>
    <div>
      {% if perso.genre %}
          Homme
          {% else %}
          Femme
      {% endif %}
    </div>
    <h3>Les carat√©ristiques</h3>
    <ul>
    <li>{{ perso.carac.force }}</li>
    <li>{{ perso.carac.agi }}</li>
    <li>{{ perso.carac.intel }}</li>
    </ul>
  </div>
</div>
{% endblock %}