{% extends 'base.html.twig' %}

{% block title %}Hello PersonnageController!{% endblock %}

{% block monTitre %}Select your character{% endblock %}

{% block body %}
    <table class="table">
        <thead class="thead-dark"> 
        <tr>
            <th>image</th>
            <th>Nom</th>
            <th>Age</th>
            <th>Sexe</th>
            <th>Force</th>
            <th>Agilit√©</th>
            <th>Intelligence</th>
        </tr>
        </thead>
        <tbody>
            {% for player in players %}
            <tr>
                <td><img src="{{ asset('images/personnages/' ~ player.nom ~ '.png') }}" </td>
                <td><a href="{{ path('afficher_personnage', {'nom' : player.nom|lower }) }}">{{ player.nom }}</a></td>
                <td>{{ player.age }}</td>
                <td> 
                    {% if player.genre %}
                        Homme
                        {% else %}
                        Femme
                    {% endif %}
                </td>
                <td>{{ player.carac.force }}</td>
                <td>{{ player.carac.agi }}</td>
                <td>{{ player.carac.intel }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endblock %}
